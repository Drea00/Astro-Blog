---
interface Props {
  title: string;
}

const { title } = Astro.props;

// Auth Check
const accessToken = Astro.cookies.get("sb-access-token");
const isLoggedIn = accessToken && accessToken.value; 
---

<!doctype html>
<html lang="en" class="h-full antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro Blog Platform" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <title>{title} | AstroBlog</title>
  </head>
  <body class="bg-gray-50 flex flex-col min-h-screen text-slate-800 font-[Inter]">
    
    <nav class="sticky top-0 z-50 w-full backdrop-blur-lg bg-white/80 border-b border-gray-200">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          
          <div class="flex-shrink-0">
            <a href="/" class="flex items-center gap-2 group">
              <span class="bg-blue-600 text-white p-1.5 rounded-lg group-hover:bg-blue-700 transition-colors">
                 ðŸš€ 
              </span>
              <span class="text-xl font-bold tracking-tight text-slate-900 group-hover:text-blue-600 transition-colors">
                AstroBlog
              </span>
            </a>
          </div>

          <div class="hidden md:flex items-center gap-6">
            <a href="/" class="text-sm font-medium text-slate-600 hover:text-blue-600 transition-colors">
              Home
            </a>

            {isLoggedIn ? (
              <>
                <a href="/dashboard" class="text-sm font-medium text-slate-600 hover:text-blue-600 transition-colors">
                  Dashboard
                </a>
                <div class="h-4 w-px bg-gray-300"></div>
                <a 
                  href="/api/auth/signout" 
                  class="text-sm font-medium text-red-600 hover:text-red-700 hover:bg-red-50 px-3 py-2 rounded-md transition-all"
                >
                  Sign Out
                </a>
              </>
            ) : (
              <>
                <a href="/login" class="text-sm font-medium text-slate-600 hover:text-blue-600 transition-colors">
                  Log in
                </a>
                <a href="/register" class="bg-slate-900 text-white px-4 py-2 rounded-full text-sm font-medium hover:bg-slate-800 hover:shadow-lg transition-all transform hover:-translate-y-0.5">
                  Get Started
                </a>
              </>
            )}
          </div>
        </div>
      </div>
    </nav>

    <main class="flex-grow w-full max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
      <slot /> 
    </main>

    <footer class="bg-white border-t border-gray-200 mt-auto">
      <div class="max-w-6xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-slate-500 text-sm">
            &copy; {new Date().getFullYear()} AstroBlog. Built with <span class="text-blue-600 font-semibold">Astro</span> & <span class="text-green-600 font-semibold">Supabase</span>.
          </p>
          <div class="flex gap-4">
             <a href="#" class="text-gray-400 hover:text-gray-600">Twitter</a>
             <a href="#" class="text-gray-400 hover:text-gray-600">GitHub</a>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>