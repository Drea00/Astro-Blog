---
import Layout from "../layouts/Layout.astro";
import { supabase } from "../lib/supabase";

const { data: posts } = await supabase
  .from("posts")
  .select(`*, profiles ( username )`)
  .order("created_at", { ascending: false })
  .limit(6); // Fetched 6 for a nice grid look
---

<Layout title="Home">
  <div class="text-center py-16 lg:py-24">
    <h1 class="text-5xl lg:text-7xl font-extrabold tracking-tight text-slate-900 mb-6">
      Writing for the <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500">Modern Web</span>
    </h1>
    <p class="text-xl text-slate-600 mb-10 max-w-2xl mx-auto leading-relaxed">
      A minimal, high-performance publishing platform. Share your stories, tutorials, and thoughts with the world.
    </p>
    <div class="flex justify-center gap-4">
        <a href="/register" class="bg-blue-600 text-white px-8 py-3.5 rounded-full font-semibold hover:bg-blue-700 hover:shadow-xl transition-all transform hover:-translate-y-1">
            Start Writing
        </a>
        <a href="#latest" class="bg-white text-slate-700 border border-gray-200 px-8 py-3.5 rounded-full font-semibold hover:bg-gray-50 hover:border-gray-300 transition-all">
            Read Posts
        </a>
    </div>
  </div>

  <div id="latest" class="border-t border-gray-100 pt-16">
    <h2 class="text-2xl font-bold text-slate-900 mb-8">Latest Stories</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts?.map((post) => (
        <article class="flex flex-col bg-white rounded-2xl border border-gray-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 overflow-hidden h-full">
          <a href={`/read/${post.id}`} class="flex flex-col h-full p-6">
            
            <div class="mb-4">
                <span class="bg-blue-50 text-blue-700 text-xs font-bold px-2.5 py-1 rounded-full uppercase tracking-wide">
                    Article
                </span>
            </div>

            <h3 class="text-xl font-bold text-slate-900 mb-3 leading-tight group-hover:text-blue-600">
                {post.title}
            </h3>
            
            <p class="text-slate-500 text-sm mb-6 flex-grow line-clamp-3 leading-relaxed">
                {post.excerpt || post.content.substring(0, 150) + "..."}
            </p>
            
            <div class="flex items-center border-t border-gray-100 pt-4 mt-auto">
                <div class="h-8 w-8 rounded-full bg-gradient-to-tr from-blue-500 to-purple-500 flex items-center justify-center text-white text-xs font-bold mr-3">
                    {post.profiles?.username?.[0].toUpperCase()}
                </div>
                <div class="text-xs">
                    <p class="font-medium text-slate-900">@{post.profiles?.username}</p>
                    <p class="text-slate-400">{new Date(post.created_at).toLocaleDateString()}</p>
                </div>
            </div>
          </a>
        </article>
      ))}
    </div>

    {(!posts || posts.length === 0) && (
        <div class="text-center py-20 bg-gray-50 rounded-xl border border-dashed border-gray-300">
            <p class="text-slate-500 mb-4">No stories have been published yet.</p>
            <a href="/register" class="text-blue-600 font-medium hover:underline">Become the first author &rarr;</a>
        </div>
    )}
  </div>
</Layout>